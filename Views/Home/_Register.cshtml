@model User
<form action="register" method="post">
    <div class="form-group">
        <span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName"></label>
        <input type="text" class="form-control" id="username" asp-for="FirstName">
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName"></span>
        <label asp-for="LastName"></label>
        <input type="text" class="form-control" id="username" asp-for="LastName">
    </div>
    <div class="form-group">
        <span asp-validation-for="Email"></span>
        <label asp-for="Email"></label>
        <input type="text" class="form-control" id="email" asp-for="Email">
    </div>
    <div class="form-group">
        <span asp-validation-for="Password"></span>
        <label asp-for="Password"></label>
        <input type="password" class="form-control" id="password" asp-for="Password">
    </div>
    <div class="form-group">
        <span asp-validation-for="Confirm"></span>
        <label asp-for="Confirm"></label>
        <input type="password" class="form-control" id="password_confirmation" asp-for="Confirm">
    </div>
    <button type="submit" class="btn btn-success mb-2">Register</button>
</form>